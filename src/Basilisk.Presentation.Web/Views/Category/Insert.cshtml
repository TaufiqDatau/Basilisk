@{
}
@model CategoryViewModel
@section breadcrumbs{
    <span><a asp-action="Index">Category</a> / Insert</span>
}
<h1>Add New Category</h1>
<form class="upsert-form" method="post" asp-action="Insert">
    <table>
        <tbody>
            <tr>
                <td>
                    <label asp-for="Name">Name</label>
                </td>
                <td>
                    <input asp-for="Name" />
                    <span asp-validation-for="Name"></span>
                </td>
            </tr>
            <tr>
                <td class="textarea-label">
                    <label asp-for="Description">Description</label>
                </td>
                <td>
                    <textarea asp-for="Description"></textarea>
                </td>
            </tr>
        </tbody>
    </table>
    <button class="blue-button">Submit Category</button>
</form>