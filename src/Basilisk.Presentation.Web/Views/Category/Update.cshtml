@{
}
@model CategoryViewModel
@section breadcrumbs{
    <span><a asp-action="Index">Category</a> / Edit</span>
}
<h1>Edit A Category</h1>
<form class="upsert-form" method="post" asp-action="Edit">
    <input type="hidden" asp-for="Id" value="@Model.Id" />
    <table>
        <tbody>
            <tr>
                <td>
                    <label asp-for="Name" >Name</label>
                </td>
                <td>
                    <input asp-for="Name" value="@Model.Name"/>
                </td>
            </tr>
            <tr>
                <td class="textarea-label">
                    <label asp-for="Description">Description</label>
                </td>
                <td>
                    <textarea asp-for="Description" >@Model.Description</textarea>
                </td>
            </tr>
        </tbody>
    </table>
    <button class="blue-button">Accept Edit</button>
</form>